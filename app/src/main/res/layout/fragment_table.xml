                android:gravity="center"
                android:text="25.2" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_seven_quantifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="7" />

            <TextView
                android:id="@+id/tv_row_seven_result"
