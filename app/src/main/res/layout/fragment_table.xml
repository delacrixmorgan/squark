                android:layout_height="match_parent"
                android:gravity="center"
                android:text="29.4" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_eight_quantifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="8" />

            <TextView
