<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_table_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:stretchColumns="*">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/colorGreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_table_base_currency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="USD"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/fragment_table_quote_currency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MYR"
                android:textAlignment="center" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fragment_table_swap_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_swap_horiz_black_24dp"
            android:tint="@color/colorGreen"
            app:backgroundTint="@color/colorWhite"
            app:elevation="6dp"
            app:fabSize="normal" />

    </RelativeLayout>

    <TableRow android:layout_weight="1">

        <TextView
            android:id="@+id/tv_row_one_quantifier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/tv_row_one_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4.2" />
    </TableRow>

    <TableRow android:layout_weight="1">

        <TextView
            android:id="@+id/tv_row_two_quantifier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tv_row_two_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="8.4" />

    </TableRow>

    <TableRow android:layout_weight="1">

