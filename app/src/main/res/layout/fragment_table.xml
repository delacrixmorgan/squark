<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/fragment_table_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:stretchColumns="*">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/colorGreen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_table_base_currency"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="USD"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/fragment_table_quote_currency"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="MYR"
                    android:textAlignment="center" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

        </RelativeLayout>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_one_quantifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:id="@+id/tv_row_one_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4.2" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_two_quantifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/tv_row_two_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="8.4" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_three_quantifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3" />

            <TextView
                android:id="@+id/tv_row_three_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="12.6" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_four_quantifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4" />

            <TextView
                android:id="@+id/tv_row_four_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="16.8" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_five_quantifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:id="@+id/tv_row_five_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="21.0" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_six_quantifier"
