                android:gravity="center"
                android:text="9" />

            <TextView
                android:id="@+id/tv_row_nine_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="37.8" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_ten_quantifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="10" />

            <TextView
                android:id="@+id/tv_row_ten_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="42.0" />

        </TableRow>
    </TableLayout>

</LinearLayout>